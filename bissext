programa
{
	
	
	funcao inicio()
	{

   
inteiro ano=0


   escreva("Digite o ano (ou 0 para considerar o ano atual): ")
   leia(ano)
   
  
   se ((ano%4 == 0) e (ano%100 == 0) ou (ano%400 == 0)) {
   	
      escreva(ano, " é um ano bissexto.")}
   senao{
      escreva(ano, " não é um ano bissexto.")
  

	}
}


}
